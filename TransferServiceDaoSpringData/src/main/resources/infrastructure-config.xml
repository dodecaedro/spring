<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
           http://www.springframework.org/schema/context
           http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <!-- Here would be production database configuration -->
    <!-- This xml can stay inside the jar, and database.properties can be put outside-->
    <context:property-override location="classpath:database.properties"/>

    <!-- PoolProperties contains properties that spring will override using the .properties file -->
    <bean id="database" class="org.apache.tomcat.jdbc.pool.PoolProperties"/>

    <bean id="dataSource" class="org.apache.tomcat.jdbc.pool.DataSource">
        <constructor-arg ref="database"/>
    </bean>
</beans>